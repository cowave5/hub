#! /bin/bash

npm run build:prod

echo "FROM nginx:1.24.0" >> Dockerfile
echo "WORKDIR /opt/cowave/hub-ui" >> Dockerfile

echo "RUN mkdir -p /opt/cowave/hub-ui" >> Dockerfile
echo "COPY ./dist /opt/cowave/hub-ui" >> Dockerfile
echo "COPY ./nginx.conf /etc/nginx/nginx.conf" >> Dockerfile

version=`sed -n 's/.*"version": "\(.*\)",/\1/p' package.json`
docker build -t hub-ui:$version .

rm -f Dockerfile
